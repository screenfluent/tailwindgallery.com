---
interface Props {
  title: string;
  url: string;
  category: string;
  screenshots: {
    mobile: string;
    tablet: string;
    desktop: string;
  };
}

const { title, url, category, screenshots } = Astro.props;
---

<div 
  class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 transition-all duration-500"
  data-transition="fade"
>
  <div 
    class="bg-white w-full h-full md:w-[90%] md:h-[90%] md:mx-auto md:my-[5vh] rounded-none md:rounded-2xl shadow-2xl relative overflow-y-auto"
    data-transition="slide"
  >
    {/* Close button */}
    <button 
      class="absolute top-6 right-6 bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-colors duration-300 rounded-full p-2"
      onclick="history.back()"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    {/* Content */}
    <div class="p-8">
      <div class="max-w-5xl mx-auto">
        <div class="flex items-center justify-between gap-4 mb-8">
          <h1 class="text-3xl font-bold text-gray-900">{title}</h1>
          <span class="text-sm bg-purple-50 text-purple-700 px-3 py-1 rounded-full mono">{category}</span>
        </div>

        {/* Screenshots */}
        <div class="space-y-8">
          <img src={screenshots.desktop} alt="Desktop view" class="w-full rounded-lg shadow-lg" />
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <img src={screenshots.tablet} alt="Tablet view" class="w-full rounded-lg shadow-lg" />
            <img src={screenshots.mobile} alt="Mobile view" class="w-full rounded-lg shadow-lg" />
          </div>
        </div>

        {/* Visit Website Button */}
        <div class="mt-8 text-center">
          <a 
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-full font-medium transition-colors duration-300"
          >
            Visit Website
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide {
    from { 
      transform: translateY(100%);
      opacity: 0;
    }
    to { 
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>

<script>
  // Handle Escape key to close overlay
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      history.back();
    }
  });
</script> 