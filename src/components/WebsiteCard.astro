---
import WebsiteCollage from './WebsiteCollage.astro';
import type { ImageMetadata } from 'astro';

interface Props {
    title: string;
    url: string;
    category: string;
    screenshots: {
        mobile: ImageMetadata;
        tablet: ImageMetadata;
        desktop: ImageMetadata;
    };
}

const { title, url, category, screenshots } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-sm hover:shadow-md hover:-translate-y-0.5 transition-all duration-300 overflow-hidden group">
    <WebsiteCollage
        mobile={screenshots.mobile}
        tablet={screenshots.tablet}
        desktop={screenshots.desktop}
        alt={`${title} website screenshot`}
    />
    
    <div class="p-4">
        <div class="flex items-center justify-between gap-3 mb-1.5">
            <h3 class="text-sm font-semibold text-gray-900 leading-none">{title}</h3>
            <span class="text-[10px] bg-purple-50 text-purple-700 px-1.5 py-0.5 rounded-full mono shrink-0">{category}</span>
        </div>
    </div>
</div> 