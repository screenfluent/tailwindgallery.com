---
import Layout from '../../layouts/Layout.astro';
import WebsiteOverlay from '../../components/WebsiteOverlay.astro';

export function getStaticPaths() {
  // Tu będziemy pobierać dane z CMS/API, na razie hardcodujemy
  return [
    {
      params: { slug: 'granola' },
      props: {
        title: 'Granola',
        url: 'https://granola.com',
        category: 'E-commerce',
        description: 'Explore Granola\'s beautiful e-commerce website built with Tailwind CSS. A perfect example of modern design and user experience.',
        screenshots: {
          mobile: '/screenshots/granola-mobile.jpeg',
          tablet: '/screenshots/granola-tablet.jpeg',
          desktop: '/screenshots/granola-desktop.jpeg'
        }
      }
    },
    {
      params: { slug: 'supabase' },
      props: {
        title: 'Supabase',
        url: 'https://supabase.com',
        category: 'SaaS',
        description: 'See how Supabase uses Tailwind CSS to create a stunning developer platform interface. A masterclass in technical product design.',
        screenshots: {
          mobile: '/screenshots/supabase-mobile.jpeg',
          tablet: '/screenshots/supabase-tablet.jpeg',
          desktop: '/screenshots/supabase-desktop.jpeg'
        }
      }
    },
    // ... więcej stron
  ];
}

const { title, url, category, description, screenshots } = Astro.props;
---

<Layout 
  title={`${title} - Website Showcase`}
  description={description}
>
  <WebsiteOverlay
    title={title}
    url={url}
    category={category}
    screenshots={screenshots}
  />
</Layout> 