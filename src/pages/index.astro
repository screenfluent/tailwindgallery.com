import { db, Users, Websites, Activities } from 'astro:db';
import { Image } from 'astro:assets';
import mobileScreen from '../assets/screenshots/supabase-mobile.jpeg';
import tabletScreen from '../assets/screenshots/supabase-tablet.jpeg';
import desktopScreen from '../assets/screenshots/supabase-desktop.jpeg';

// Basic interfaces
interface User {
  id: number;
  username: string;
  displayName?: string;
  avatar?: string;
  createdAt: Date;
}

interface Website {
  id: number;
  url: string;
  title: string;
  description: string;
  thumbnail?: string;
  usesTailwind: boolean;
  submittedBy: number;
  createdAt: Date;
}

interface Activity {
  id: number;
  type: string;
  createdAt: Date;
  userId: number;
  websiteId?: number;
  metadata: any;
}

// Data fetching
const websites = await db.select().from(Websites) as Website[];
const users = await db.select().from(Users) as User[];
const activities = await db.select().from(Activities) as Activity[];

// Filter only Tailwind websites
const tailwindWebsites = websites.filter(w => w.usesTailwind);

// Calculate weekly stats
const oneWeekAgo = new Date();
oneWeekAgo.setDate(oneWeekAgo.getDate() - 7);

const weeklyStats = {
  newWebsites: websites.filter(w => new Date(w.createdAt) > oneWeekAgo).length,
  newLikes: activities.filter(a => 
    a.type === 'LIKE' && 
    new Date(a.createdAt) > oneWeekAgo
  ).length,
  newContributors: users.filter(u => 
    new Date(u.createdAt) > oneWeekAgo
  ).length
};
